    <!-- JavaScript for Functionality -->
    <script>
        const form = document.getElementById('quote-form');
        const successMessage = document.getElementById('success-message');
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        // --- Form Submission Handler ---
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default browser submission
            
            // Basic Validation Check (Browser handles 'required' mostly, but good practice to check)
            const requiredFields = ['name', 'email', 'category', 'description', 'destination'];
            let isValid = true;

            requiredFields.forEach(id => {
                const input = document.getElementById(id);
                if (!input.value.trim()) {
                    isValid = false;
                    input.classList.add('border-red-500');
                    input.classList.remove('border-gray-600');
                } else {
                    input.classList.remove('border-red-500');
                    input.classList.add('border-gray-600');
                }
            });

            if (isValid) {
                // 1. Show Success Message (Non-alert)
                successMessage.classList.remove('hidden');
                
                // 2. Clear the form fields after success
                form.reset();
            } else {
                // Optional: Scroll to the top of the form or first invalid field
                form.scrollIntoView({ behavior: 'smooth' });
            }
        });

        // --- Mobile Menu Toggle ---
        mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
        });

        // Function to close menu on link click (for smooth transition on mobile)
        function closeMenu() {
            mobileMenu.classList.add('hidden');
        }

        // Add event listeners to mobile menu links to close the menu
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', closeMenu);
        });
    </script>
</body>
